<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufc.smd.diario">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_diariosono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_diariosono_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Diariosono">

        <receiver
            android:name=".activity.NotificationReceiver"></receiver>

        <activity
            android:name=".activity.PrincipalActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.ListaEventosActivity"
            android:exported="false"
            android:theme="@style/ActionBarTheme"
            android:label="Eventos diários"/>
        <activity
            android:name=".activity.NovoUsuarioActivity"
            android:exported="false"
            android:theme="@style/ActionBarTheme"
            android:label="Cadastro"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.EditarPerfilActivity"
            android:exported="false"
            android:theme="@style/ActionBarTheme"
            android:label="Editar perfil"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.NotificacaoActivity"
            android:exported="false"
            android:theme="@style/ActionBarTheme"
            android:label="Notificações"/>
        <activity
            android:name=".activity.ConfiguracaoActivity"
            android:exported="false"
            android:theme="@style/ActionBarTheme"
            android:label="Configurações"/>
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>